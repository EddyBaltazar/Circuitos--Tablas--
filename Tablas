#include<stdio.h>

int main ()
{
    int x, y, z, a, b;
    printf("\t\t\t\t Dame un numero\n");
    printf ("-----------------------------------Primera Tabla-----------------------------------------------------\n");
    scanf ("%d",&x);
    printf ("------------------------------------------------------------------------------------------------------\n");
    y=x*x;
    z=(x*x)-2*x;
    while (y>=z)
    {
        printf ("%d\n",y);
        y=y-2;
    }
    printf ("-----------------------------------Segunda tabla-----------------------------------------------------\n");
    a=x*3;
    b=(7*x)+2;
    while(a<=b)
    {
        printf ("%d\n",a);
        a=a+2;
    }
}
